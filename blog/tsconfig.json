{
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.cypress-ct.json"
    }
  ],
  "compilerOptions": {
    "target": "ES2016",
    "baseUrl": ".",
    "composite": true,
    "allowSyntheticDefaultImports": true, //允许从没有设置默认导出的模块中默认导入。
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["src/types/*"]
    }
  },
  "include": [
    "src"
  ]
}
