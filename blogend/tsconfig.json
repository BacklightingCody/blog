{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types/", "./types/"],
    "types": ["node"],
    "target": "ESNext",
    "baseUrl": "./",
    "outDir": "./dist",
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["types/*"],
      "#/*": ["db/*"]
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src", "db"]
}
